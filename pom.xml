<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.2.5.RELEASE</version>
    </parent>

    <groupId>kim.sesame.framework</groupId>
    <artifactId>sesame-parent</artifactId>
    <version>2.1.0</version><!-- sesame.version -->
    <packaging>pom</packaging>
    <name>${project.artifactId}-${project.version}</name>
    <description></description>

    <properties>
        <sesame.groupId>kim.sesame.framework</sesame.groupId>
        <sesame.version>2.1.0</sesame.version>

        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <jdk.version>1.8</jdk.version>
        <!--https://projects.spring.io/spring-cloud/-->
        <spring.cloud.version>Finchley.SR2</spring.cloud.version>
        <spring.cloud.starter.version>1.4.6.RELEASE</spring.cloud.starter.version>
        <!--
        <thymeleaf.version>3.0.9.RELEASE</thymeleaf.version>
        <thymeleaf-layout-dialect.version>2.3.0</thymeleaf-layout-dialect.version>
        -->
        <mysql.version>8.0.19</mysql.version>

        <!--docker config -->
        <docker.reg.name>johnnywjh/</docker.reg.name>
        <docker.image.name.prefix>kim.</docker.image.name.prefix>
        <docker.image.tag>latest</docker.image.tag>
    </properties>

    <modules>
        <module>framework-parent</module>
        <module>sesame-plugins</module>
    </modules>

    <dependencyManagement>
        <dependencies>

            <dependency>
                <groupId>${sesame.groupId}</groupId>
                <artifactId>framework-core</artifactId>
                <version>${sesame.version}</version>
            </dependency>
            <dependency>
                <groupId>${sesame.groupId}</groupId>
                <artifactId>framework-cache</artifactId>
                <version>${sesame.version}</version>
            </dependency>
            <dependency>
                <groupId>${sesame.groupId}</groupId>
                <artifactId>framework-web</artifactId>
                <version>${sesame.version}</version>
            </dependency>
            <dependency>
                <groupId>${sesame.groupId}</groupId>
                <artifactId>framework-mybatis-plus</artifactId>
                <version>${sesame.version}</version>
            </dependency>

            <dependency>
                <groupId>${sesame.groupId}</groupId>
                <artifactId>framework-cache-redis</artifactId>
                <version>${sesame.version}</version>
            </dependency>
            <dependency>
                <groupId>${sesame.groupId}</groupId>
                <artifactId>framework-cache-local-caffeine</artifactId>
                <version>${sesame.version}</version>
            </dependency>

            <dependency>
                <groupId>${sesame.groupId}</groupId>
                <artifactId>framework-email</artifactId>
                <version>${sesame.version}</version>
            </dependency>
            <dependency>
                <groupId>${sesame.groupId}</groupId>
                <artifactId>framework-rocketmq</artifactId>
                <version>${sesame.version}</version>
            </dependency>
            <dependency>
                <groupId>${sesame.groupId}</groupId>
                <artifactId>framework-rocketmq-plus</artifactId>
                <version>${sesame.version}</version>
            </dependency>

            <dependency>
                <groupId>${sesame.groupId}</groupId>
                <artifactId>framework-websocket</artifactId>
                <version>${sesame.version}</version>
            </dependency>
            <dependency>
                <groupId>${sesame.groupId}</groupId>
                <artifactId>framework-websocket-cloud</artifactId>
                <version>${sesame.version}</version>
            </dependency>
            <dependency>
                <groupId>${sesame.groupId}</groupId>
                <artifactId>framework-lock</artifactId>
                <version>${sesame.version}</version>
            </dependency>
            <dependency>
                <groupId>${sesame.groupId}</groupId>
                <artifactId>framework-lock-serial</artifactId>
                <version>${sesame.version}</version>
            </dependency>

            <dependency>
                <groupId>${sesame.groupId}</groupId>
                <artifactId>framework-utils-parent</artifactId>
                <version>${sesame.version}</version>
            </dependency>
            <dependency>
                <groupId>${sesame.groupId}</groupId>
                <artifactId>framework-utils-ssh</artifactId>
                <version>${sesame.version}</version>
            </dependency>
            <dependency>
                <groupId>${sesame.groupId}</groupId>
                <artifactId>framework-utils-swagger</artifactId>
                <version>${sesame.version}</version>
            </dependency>
            <dependency>
                <groupId>${sesame.groupId}</groupId>
                <artifactId>framework-utils-upload</artifactId>
                <version>${sesame.version}</version>
            </dependency>

        </dependencies>
    </dependencyManagement>

    <build>
        <finalName>${project.artifactId}</finalName>
        <plugins>
            <!--jdk 版本 -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>${jdk.version}</source>
                    <target>${jdk.version}</target>
                </configuration>
            </plugin>
            <!-- 处理资源文件的编码 -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>3.1.0</version>
                <configuration>
                    <encoding>${project.build.sourceEncoding}</encoding>
                    <nonFilteredFileExtensions>
                        <nonFilteredFileExtension>woff</nonFilteredFileExtension>
                        <nonFilteredFileExtension>woff2</nonFilteredFileExtension>
                        <nonFilteredFileExtension>eot</nonFilteredFileExtension>
                        <nonFilteredFileExtension>ttf</nonFilteredFileExtension>
                        <nonFilteredFileExtension>svg</nonFilteredFileExtension>
                    </nonFilteredFileExtensions>
                </configuration>
            </plugin>
            <!--源码打包-->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <executions>
                    <execution>
                        <id>attach-sources</id>
                        <goals>
                            <goal>jar-no-fork</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <!--docker 构建-->
            <plugin>
                <groupId>com.spotify</groupId>
                <artifactId>docker-maven-plugin</artifactId>
                <version>0.4.12</version>
                <configuration>
                    <imageName>${docker.reg.name}${docker.image.name.prefix}${project.artifactId}</imageName>
                    <dockerDirectory>${project.basedir}/src/main/docker</dockerDirectory>
                    <!--<dockerHost>http://localhost:2375</dockerHost>-->
                    <resources>
                        <resource>
                            <targetPath>/</targetPath>
                            <directory>${project.build.directory}</directory>
                            <include>${project.build.finalName}.jar</include>
                        </resource>
                    </resources>
                    <imageTags>
                        <imageTag>${docker.image.tag}</imageTag>
                    </imageTags>
                </configuration>
            </plugin>

            <!--本地install  注释掉这个-->
            <!--
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-gpg-plugin</artifactId>
                <version>${gpg.version}</version>
                <executions>
                    <execution>
                        <id>sign-artifacts</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>sign</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            -->
            <!--
            <plugin>
                <groupId>org.sonatype.plugins</groupId>
                <artifactId>nexus-staging-maven-plugin</artifactId>
                <version>1.6.3</version>
                <extensions>true</extensions>
                <configuration>
                    <serverId>ossrh</serverId>
                    <nexusUrl>https://oss.sonatype.org/</nexusUrl>
                    <autoReleaseAfterClose>true</autoReleaseAfterClose>
                </configuration>
            </plugin>
            -->

        </plugins>

        <!-- 开启资源过滤 -->
        <resources>
            <resource>
                <directory>${project.basedir}/src/main/resources</directory>
                <includes>
                    <include>**/spring.factories</include>
                </includes>
                <filtering>false</filtering>
            </resource>
            <resource>
                <directory>${project.basedir}/src/main/java</directory>
                <filtering>false</filtering>
                <includes>
                    <include>**/*.properties</include>
                    <include>**/*.xml</include>
                    <include>**/*.js</include>
                    <include>**/*.json</include>
                </includes>
            </resource>
        </resources>
    </build>

