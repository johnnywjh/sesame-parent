<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>1.5.16.RELEASE</version>
    </parent>

    <groupId>kim.sesame.framework</groupId>
    <artifactId>sesame-parent</artifactId>
    <version>1.3.1</version><!-- sesame.version -->
    <packaging>pom</packaging>
    <name>${project.artifactId}-${project.version}</name>
    <url>https://gitee.com/sesamekim/framework-boot</url>
    <description></description>

    <!-- 项目集合-->
    <modules>
        <module>framework-parent</module><!--架构集合-->
        <module>sesame-plugins</module><!--自定义插件-->
    </modules>

    <properties>
        <sesame.groupId>kim.sesame.framework</sesame.groupId>
        <sesame.version>1.3.1</sesame.version>
        <sesame.plugins.version>1.3.1</sesame.plugins.version>
        <gpg.version>1.6</gpg.version>

        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <jdk.version>1.8</jdk.version>
        <!--https://projects.spring.io/spring-cloud/-->
        <spring.cloud.version>Edgware.SR3</spring.cloud.version>

        <thymeleaf.version>3.0.9.RELEASE</thymeleaf.version>
        <thymeleaf-layout-dialect.version>2.3.0</thymeleaf-layout-dialect.version>

        <!-- https://mvnrepository.com/artifact/com.codingapi/transaction-springcloud -->
        <lcn.last.version>4.1.0</lcn.last.version>

        <war.path>../target</war.path>
    </properties>

    <!-- 环境配置 -->
    <profiles>
        <!-- 开发环境 -->
        <profile>
            <id>dev</id>
            <activation>
                <activeByDefault>true</activeByDefault><!-- 默认激活 -->
            </activation>
            <properties>
                <profileActive>dev</profileActive>
            </properties>
        </profile>
        <!-- 测试环境 -->
        <profile>
            <id>test</id>
            <properties>
                <profileActive>test</profileActive>
            </properties>
        </profile>
        <!-- 生产环境 -->
        <profile>
            <id>prod</id>
            <properties>
                <profileActive>prod</profileActive>
            </properties>
        </profile>

    </profiles>


    <dependencyManagement>
        <dependencies>

            <!-- java伪静态 -->
            <dependency>
                <groupId>org.tuckey</groupId>
                <artifactId>urlrewritefilter</artifactId>
                <version>4.0.4</version>
            </dependency>
            <!-- 阿里数据池 -->
            <dependency>
                <groupId>com.alibaba</groupId>
                <artifactId>druid</artifactId>
                <version>1.1.2</version>
            </dependency>
            <dependency>
                <groupId>org.mybatis</groupId>
                <artifactId>mybatis</artifactId>
                <version>3.4.4</version>
            </dependency>
            <!-- 网络框架 -->
            <dependency>
                <groupId>com.github.kevinsawicki</groupId>
                <artifactId>http-request</artifactId>
                <version>6.0</version>
            </dependency>

            <!--framework.sesame start -->
            <dependency>
                <groupId>${sesame.groupId}</groupId>
                <artifactId>framework-core</artifactId>
                <version>${sesame.version}</version>
            </dependency>
            <dependency>
                <groupId>${sesame.groupId}</groupId>
                <artifactId>framework-mybatis</artifactId>
                <version>${sesame.version}</version>
            </dependency>
            <dependency>
                <groupId>${sesame.groupId}</groupId>
                <artifactId>framework-rocketmq</artifactId>
                <version>${sesame.version}</version>
            </dependency>
            <dependency>
                <groupId>${sesame.groupId}</groupId>
                <artifactId>framework-cache</artifactId>
                <version>${sesame.version}</version>
            </dependency>
            <dependency>
                <groupId>${sesame.groupId}</groupId>
                <artifactId>framework-cache-redis</artifactId>
                <version>${sesame.version}</version>
            </dependency>
            <dependency>
                <groupId>${sesame.groupId}</groupId>
                <artifactId>framework-lock</artifactId>
                <version>${sesame.version}</version>
            </dependency>
            <dependency>
                <groupId>${sesame.groupId}</groupId>
                <artifactId>framework-lock-serial</artifactId>
                <version>${sesame.version}</version>
            </dependency>
            <dependency>
                <groupId>${sesame.groupId}</groupId>
                <artifactId>framework-spring-boot</artifactId>
                <version>${sesame.version}</version>
            </dependency>
            <dependency>
                <groupId>${sesame.groupId}</groupId>
                <artifactId>framework-spring-boot-cloud</artifactId>
                <version>${sesame.version}</version>
            </dependency>
            <dependency>
                <groupId>${sesame.groupId}</groupId>
                <artifactId>framework-spring-boot-starter</artifactId>
                <version>${sesame.version}</version>
            </dependency>
            <dependency>
                <groupId>${sesame.groupId}</groupId>
                <artifactId>framework-distributed-tx</artifactId>
                <version>${sesame.version}</version>
            </dependency>
            <dependency>
                <groupId>${sesame.groupId}</groupId>
                <artifactId>framework-web</artifactId>
                <version>${sesame.version}</version>
            </dependency>
            <dependency>
                <groupId>${sesame.groupId}</groupId>
                <artifactId>framework-utils</artifactId>
                <version>${sesame.version}</version>
            </dependency>
            <dependency>
                <groupId>${sesame.groupId}</groupId>
                <artifactId>framework-utils-swagger</artifactId>
                <version>${sesame.version}</version>
            </dependency>
            <dependency>
                <groupId>${sesame.groupId}</groupId>
                <artifactId>framework-utils-accessory</artifactId>
                <version>${sesame.version}</version>
            </dependency>
            <dependency>
                <groupId>${sesame.groupId}</groupId>
                <artifactId>framework-websocket</artifactId>
                <version>${sesame.version}</version>
            </dependency>
            <dependency>
                <groupId>${sesame.groupId}</groupId>
                <artifactId>framework-email</artifactId>
                <version>${sesame.version}</version>
            </dependency>
            <dependency>
                <groupId>${sesame.groupId}</groupId>
                <artifactId>framework-tablelog</artifactId>
                <version>${sesame.version}</version>
            </dependency>
            <!--framework.sesame end -->

            <!--spring cloud -->
            <dependency>
                <groupId>org.springframework.cloud</groupId>
                <artifactId>spring-cloud-dependencies</artifactId>
                <version>${spring.cloud.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>

        </dependencies>
    </dependencyManagement>

    <build>
        <finalName>${project.artifactId}</finalName>
        <plugins>
            <!--jdk 版本 -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>${jdk.version}</source>
                    <target>${jdk.version}</target>
                </configuration>
            </plugin>
            <!-- 处理资源文件的编码 -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>3.1.0</version>
                <configuration>
                    <encoding>${project.build.sourceEncoding}</encoding>
                </configuration>
            </plugin>
            <!--源码打包-->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <executions>
                    <execution>
                        <id>attach-sources</id>
                        <goals>
                            <goal>jar-no-fork</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <configuration>
                    <nonFilteredFileExtensions>
                        <nonFilteredFileExtension>woff</nonFilteredFileExtension>
                        <nonFilteredFileExtension>woff2</nonFilteredFileExtension>
                        <nonFilteredFileExtension>eot</nonFilteredFileExtension>
                        <nonFilteredFileExtension>ttf</nonFilteredFileExtension>
                        <nonFilteredFileExtension>svg</nonFilteredFileExtension>
                    </nonFilteredFileExtensions>
                </configuration>
            </plugin>
            <!--本地install  注释掉这个-->
            <!--
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-gpg-plugin</artifactId>
                <version>${gpg.version}</version>
                <executions>
                    <execution>
                        <id>sign-artifacts</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>sign</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            -->
            <!--
            <plugin>
                <groupId>org.sonatype.plugins</groupId>
                <artifactId>nexus-staging-maven-plugin</artifactId>
                <version>1.6.3</version>
                <extensions>true</extensions>
                <configuration>
                    <serverId>ossrh</serverId>
                    <nexusUrl>https://oss.sonatype.org/</nexusUrl>
                    <autoReleaseAfterClose>true</autoReleaseAfterClose>
                </configuration>
            </plugin>
            -->
        </plugins>
        <!--插件定义,被继承-->
        <pluginManagement>
            <plugins>
                <!--自定义插件:重新加载资源文件-->
                <plugin>
                    <groupId>kim.sesame.framework</groupId>
                    <artifactId>reload-resources-file</artifactId>
                    <version>${sesame.plugins.version}</version>
                    <configuration>
                        <srcFiles>
                            <srcFile>${project.basedir}/src/main/resources/public</srcFile>
                            <srcFile>${project.basedir}/src/main/resources/static</srcFile>
                            <srcFile>${project.basedir}/src/main/resources/templates</srcFile>
                        </srcFiles>
                    </configuration>
                    <executions>
                        <execution>
                            <goals>
                                <goal>reloadResourcesFile</goal>
                            </goals>
                        </execution>
                    </executions>
                </plugin>
                <!--自定义插件:打包时压缩指定目录-->
                <plugin>
                    <groupId>kim.sesame.framework</groupId>
                    <artifactId>zip</artifactId>
                    <version>${sesame.plugins.version}</version>
                    <configuration>
                        <paths>
                            <path>${project.basedir}/target/classes/com/sesame/theme</path>
                        </paths>
                    </configuration>
                    <executions>
                        <execution>
                            <goals>
                                <goal>zip</goal>
                            </goals>
                            <phase>compile</phase>
                        </execution>
                    </executions>
                </plugin>


                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-gpg-plugin</artifactId>
                    <version>${gpg.version}</version>
                    <executions>
                        <execution>
                            <id>sign-artifacts</id>
                            <phase>verify</phase>
                            <goals>
                                <goal>sign</goal>
                            </goals>
                        </execution>
                    </executions>
                </plugin>

            </plugins>
        </pluginManagement>
        <!-- 开启资源过滤 -->
        <resources>
            <resource>
                <directory>${project.basedir}/src/main/resources</directory>
                <includes>
                    <include>**/spring.factories</include>
                </includes>
                <filtering>false</filtering>
            </resource>
            <resource>
                <directory>${project.basedir}/src/main/java</directory>
                <filtering>false</filtering>
                <includes>
                    <include>**/*.properties</include>
                    <include>**/*.xml</include>
                    <include>**/*.js</include>
                    <include>**/*.json</include>
                </includes>
            </resource>
        </resources>
    </build>
